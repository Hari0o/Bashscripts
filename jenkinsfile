pipeline {
    agent none
    
    environment {
        Build_server = '172.31.25.16'
        Deploy_server = '13.60.16.227'
    }

    stages {
        stage('Trigger Ansible Script on Build Server') {
            agent {
                label 'master'
            }
            steps {
                script {
                    // Execute Ansible playbook on Build Server
                    sh "ssh -i /home/ubuntu/id_rsa ubuntu@${env.Build_server} 'ansible-playbook /home/ubuntu/playbook.yaml'"
                }
            }
        }
        
        stage('Deploy Script on Deploy Server') {
            agent {
                label 'master'
            }
            steps {
                script {
                    // Execute deployment playbook on Deploy Server
                    sh "ssh -i your_ssh_key user@${env.Build_server} 'ansible-playbook /home/ubuntu/deploy.yaml'"
                }
            }
        }
    }
}
